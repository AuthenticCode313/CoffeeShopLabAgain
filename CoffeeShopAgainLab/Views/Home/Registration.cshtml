@{
}

<form method="post" asp-action="Result">
    <div>
        <label for="FirstName">First Name:</label>
        <input name="FirstName" id="FirstName" required />
    </div>
    <div>
        <label for="LastName">Last Name:</label>
        <input name="LastName" id="LastName" required />
    </div>

    <div>
        <label for="Email">Email:</label>
        <input type="email" name="Email" id="Email" required />
    </div>

    <div>
        <label for="Password">Password:</label>
        <input name="Password" type="password" id="Password" required minlength="5" />
    </div>

    <div>
        <label for="Phone">Phone:</label>
        <input name="Phone" type="tel" id="Phone" required minlength="10" />
    </div>

    <div>
        <label for="Decaf">Decaf drinks</label>
        <input type="radio" name="DrinkType" value="Decaf" id="Decaf" required />
        <label for="Caf">Caf drinks</label>
        <input type="radio" name="DrinkType" value="Caf" id="Caf" required />
        
    </div>



    <input type="submit" />
</form>
